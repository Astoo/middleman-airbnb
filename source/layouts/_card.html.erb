<div class="container">
  <h1 class="text-center"> Recent Houses </h1>
  <div class="row">
    <% data.flats.each do |flat| %>
    <div class="col-md-4">
      <div class="card" style="background-image: url(<%= image_path flat.picture %>);">
        <%= image_tag flat.avatar, class: "card-user" %>
        <h2><%= flat.city %></h2>
        <h3><%= flat.owner %></h3>
        <p><%= flat.description %></p>
        <div class="rating">
        <span><i class="fa fa-star" aria-hidden="true"></i></span><span><i class="fa fa-star" aria-hidden="true"></i></span><span><i class="fa fa-star" aria-hidden="true"></i></span><span>☆</span><span>☆</span>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
